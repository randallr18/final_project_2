


<% if @userexercise.exercise.category == "cardio" %>

<p>What is your goal?</p>
  <%= form_for @userexercise do |t| %>
  <p> I want to run <%= t.text_field :distance %> miles!</p>
  <p> I want to run at a pace of <%= t.text_field :pace %> miles / hour !</p>
  <%= t.submit %>
  <% end %>

<% elsif @userexercise.exercise.category == "strength" %>

  <p>What is your goal?</p>
    <%= form_for @userexercise do |t| %>
    <p> I want to lift <%= t.text_field :max_weight %> pounds!</p>
    <p> I want to complete <%= t.text_field :endurance %> reps!</p>
    <%= t.submit %>
    <% end %>

<% elsif @userexercise.exercise.category == "yoga" %>

  <p>What is your goal?</p>
    <%= form_for @userexercise do |t| %>
    <p> I want attend <%= t.text_field :courses_attended %> classes per month!</p>
    <%= t.submit %>
    <% end %>

    <% end %>






